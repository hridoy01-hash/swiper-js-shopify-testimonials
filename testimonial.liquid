<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }

  svg {
      display: flex;
  }

  .container {
      max-width: 1430px;
      padding: 0px 15px;
      margin: 0 auto;
  }

  .ed_testimonial {
      position: relative;
      padding: 60px 0px;
      background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);
  }

  .shape_1,
  .shape_2 {
      position: absolute;
  }

  .shape_1 {
      right: 0%;
      bottom: 0;
  }

  .shape_2 {
      left: 5%;
  }

  /* testimonial header */
  .ed_testimonial_header_content {
      text-align: center;
      margin-bottom: 40px;
  }

  .ed_testimonial_header_content h1 {
      font-size: 25px;
      padding-bottom: 8px;
      font-weight: 500;
  }

  .ed_testimonial_header_content h3 {
      font-size: 33px;
      padding-bottom: 10px;
      color:#000;
      font-weight:600;
  }

  .ed_testimonial_header_content span {
      font-size: 14px;
  }

  .customomer_info_media img {
      border-radius: 50%;
      max-width: 100%;
      width: 80px;
      height: 80px;
      object-fit: cover;
  }

  .ed_testimonial_slide_item {
      padding: 30px 20px;
      background: #ededed;
      border-radius: 15px;
  }

  .customomer_info_media {
      display: flex;
      align-items: center;
      justify-content: start;
      gap: 15px;
  }

  .customer_info {
      display: flex;
      gap: 10px;
      align-items: center;
      justify-content: space-between;
  }


  .customer_review span {
      margin-top: 16px;
      display: inline-block;
      font-size: 18px;
      line-height: 1.3;
      color: #000000c9;
      font-style: italic;
  }

  .quoted {
      position: relative;
  }

  .quoted::before {
      content: '"';
      position: absolute;
      left: -13px;
      font-size: 24px;
  }

  .quoted::after {
      content: '"';
      position: absolute;
      /* right: -20px; */
      font-size: 24px;
  }


  .customer_name h4 {
      font-size: 18px;
      color: #000;
      margin-bottom: 5px;
      display: flex;
      align-items: center;
      gap: 5px;
  }

  .customer_name span {
      font-size: 15px;
      color: #676767;
  }

  .customomer_info_social {
      margin-top: -10px;
  }

  /* slider controler */
  .ed_testimonial_control_btn {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 15px;
      gap: 10px;
  }

  .ed_prev_button,
  .ed_next_button {
      height: 35px;
      width: 35px;
      background: #9d57af;
      display: flex;
      align-items: center;
      border-radius: 100%;
      justify-content: center;
      transition: all 0.2s linear;
  }

  .ed_prev_button:hover,
  .ed_next_button:hover {
      background-color: #a722b1;
  }

  @media screen and (min-width:768px) {
      .ed_testimonial {
          padding: 100px 0px;
      }

      .ed_testimonial_header_content {
          margin-bottom: 60px;
      }

      .ed_testimonial_header_content h1 {
          font-size: 30px;
          padding-bottom: 20px;
      }

      .ed_testimonial_header_content h3 {
          font-size: 45px;
          padding-bottom: 15px;
      }

      .ed_testimonial_header_content span {
          font-size: 16px;
      }

      .ed_testimonial_slide_item {
          padding: 40px 30px;
      }

      .customomer_info_media img {
          width: 110px;
          height: 110px;
      }

      .customer_name h4 {
          font-size: 20px;
          margin-bottom: 7px;
      }

      .customer_name span {
          font-size: 16px;
      }

      .customer_review span {
          margin-top: 23px;
          font-size: 19px;
      }

      .customomer_info_social a svg {
          height: 25px;
          width: 25px;
      }

      .ed_prev_button,
      .ed_next_button {
          height: 40px;
          width: 40px;
          cursor: pointer;
      }

      .ed_testimonial_control_btn {
          margin-top: 30px;
          gap: 15px;
      }

      .customomer_info_social {
          margin-top: -20px;
      }

      .shape_1 {
          right: 20%;
          bottom: unset;
      }

      .shape_2 {
          left: 20%;
      }
  }
</style>
