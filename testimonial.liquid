<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper('.swiper', {
      slidesPerView: 1,
      spaceBetween: 10,
      loop: true,
      pagination: {
          el: '.swiper-pagination',
          clickable: true,
      },
      navigation: {
          nextEl: '.swiper-button-nexts',
          prevEl: '.swiper-button-prevs',
      },
      autoplay: {
          delay: 2000,
          disableOnInteraction: false,
      },
      speed: 1000,
      breakpoints: {
          0: {
              slidesPerView: 1
          },
          768: {
              slidesPerView: 2,
              spaceBetween: 30
          },
          1025: {
              slidesPerView: 3,
              spaceBetween: 30
          }
      }
  });
</script>
